.col-xs-5
  = simple_form_for membership do |f|
    %h4 Work on project
    .row
      .col-xs-6
        = f.input :from, wrapper: :prepend, input_html: { value: f.object.from.to_s(:date) }, label_html: { class: 'input-group-addon' }
      .col-xs-6
        = f.input :to, wrapper: :prepend, input_html: { value: f.object.to.to_s(:date) }, label_html: { class: 'input-group-addon' }

    = f.association :project, collection: projects.decorate
    = f.association :user, collection: users.decorate
    = f.association :role, collection: roles.decorate

    .actions
      = f.button :submit, class: "btn-success"
